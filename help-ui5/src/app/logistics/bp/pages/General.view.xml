<mvc:View
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:core-control="app.core.control"
	width="100%">
	<layout:Grid width="100%" defaultSpan="L6 M6 S12">
		<layout:content>
			<form:SimpleForm layout="ColumnLayout">
				<core:Title text="Currency"/>
				<Label text="Display Currency" labelFor="idTransId" />
				<Select	editable="false" items="{
							path: '/ProductCollection',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				</Select>
			</form:SimpleForm>	
			<form:SimpleForm layout="ColumnLayout" >			
				<core:Title text="Basic Information"/>
				<form:layoutData>
					<layout:GridData linebreakL="true" linebreakM="true" linebreakS="true"/>
				</form:layoutData>	
				<core-control:Input value="{/TransId}" required="true" editable="true"/>
				<Label text="Series" labelFor="idTransId" />				
				<Input value="{/TransId}" required="true" editable="{form>/editable}" />
				<Label text="Code" labelFor="idTotal" />
				<Input value="{/Total}" required="true"  editable="{form>/editable}"/>
				<Label text="Name" labelFor="idTotal" />
				<Input value="{/Total}" required="true" />
				<Label text="Foreign Name" labelFor="idTotal" />
				<Input value="{/Total}" required="true" />
				<Label text="BP Type" labelFor="idTotal" />
				<Select></Select>
			</form:SimpleForm>				
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text="Preferences"/>
				<Label text="Transaction Id" labelFor="idTransId" />
				<Input value="{/TransId}" required="true" />
				<Label text="Total" labelFor="idTotal" />
				<Input value="{/Total}" required="true" />
			</form:SimpleForm>				
		</layout:content>
	</layout:Grid>
</mvc:View>
